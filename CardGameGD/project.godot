; Engine configuration file.
; It's best edited using the editor UI and not directly,
; since the parameters that go here are not all obvious.
;
; Format:
;   [section] ; section goes between []
;   param=value ; assign values to parameters

config_version=5

[application]

config/name="Spectromancer Card Game"
config/description="Lane-based card battle game with multiplayer support"
run/main_scene="res://scenes/ui/main_menu.tscn"
config/features=PackedStringArray("4.5", "GL Compatibility")
config/icon="res://icon.svg"

[autoload]

GameManager="*res://scripts/autoload/game_manager.gd"
CardDatabase="*res://scripts/autoload/card_database.gd"
SoundManager="*res://scripts/autoload/sound_manager.gd"
TextureManager="*res://scripts/autoload/texture_manager.gd"
NetworkManager="*res://scripts/autoload/network_manager.gd"

[display]

window/size/viewport_width=1024
window/size/viewport_height=768

[rendering]

renderer/rendering_method="gl_compatibility"
